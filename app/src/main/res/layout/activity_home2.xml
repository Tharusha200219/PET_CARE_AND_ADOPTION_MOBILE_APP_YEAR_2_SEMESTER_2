<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="690dp"
    android:layout_margin="12sp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="8dp"
    >


    <LinearLayout
        android:id="@+id/background_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dog_view"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/categories_image"
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/dog3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/categories_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Labrador"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/categories_dis"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:fontFamily="sans-serif-medium"
                android:padding="10dp"
                android:text="Bailey, the Labrador Retriever mix, is a bundle of energy and joy. Her glossy coat shines in the sunlight, displaying hues of chocolate brown and hints of caramel. With her expressive eyes, she can convey a range of emotions from playful eagerness to gentle affection.  At 2 years old, Bailey is in the prime of her life, always ready for adventure and exploration. Whether it's a brisk walk around the neighborhood or a romp in the park, she eagerly embraces every opportunity to stretch her legs and engage her senses.  Despite her boundless energy, Bailey has a gentle demeanor, especially when interacting with people. She adores attention and isn't shy about leaning in for cuddles and belly rubs. Her tail wags furiously whenever she sees her favorite humans, eager to shower them with kisses and affection.  Bailey's intelligence shines through in her attentive gaze and eagerness to learn. With a bit of patience and positive reinforcement, she quickly picks up new commands and tricks, making her a delight to train.  As a spayed female, Bailey is well-mannered and has a calm demeanor, making her an excellent companion for families and individuals alike. She thrives on human interaction and would thrive in a loving home where she can receive the attention and care she deserves.  In summary, Bailey is not just a dog; she's a beloved member of the family. With her sweet nature, playful spirit, and unwavering loyalty, she brings boundless joy and love into the lives of those around her."
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:padding="1dp"

        >

        <LinearLayout
            android:id="@+id/home2"
            android:layout_width="70dp"
            android:layout_height="46dp"
            android:layout_margin="1dp"
            android:background="@color/coloraccent"
            android:orientation="vertical"
            android:elevation="8dp"
            android:padding="1dp">

            <Button
                android:id="@+id/home"
                android:layout_width="120dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="Home"
                android:backgroundTint="@color/coloraccent"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/petcare1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/coloraccent"
            android:orientation="vertical"

            android:elevation="8dp"
            android:padding="1dp">

            <Button
                android:id="@+id/petcare"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/coloraccent"
                android:text="petcare"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:textStyle="bold" />





        </LinearLayout>
        <LinearLayout
            android:id="@+id/category1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/coloraccent"
            android:orientation="vertical"

            android:elevation="8dp"
            android:padding="1dp">

            <Button
                android:id="@+id/category"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="category"
                android:backgroundTint="@color/coloraccent"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:textStyle="bold" />





        </LinearLayout>
        <LinearLayout
            android:id="@+id/profile1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/coloraccent"
            android:orientation="vertical"

            android:elevation="8dp"
            android:padding="1dp">

            <Button
                android:id="@+id/profile"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/coloraccent"
                android:text="profile"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:textStyle="bold" />





        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


